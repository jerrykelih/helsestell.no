//--------
// BODY
//--------

body
  // padding-top: 90px
  padding-top -30px
  font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 300
  font-size: 16px
  line-height: 1.8

//--------
// TYPOGRAPHY
//--------


p
  font-size 1.9rem
  &.small
    font-size 1.7rem
h1
  font-size: 3.2rem
  line-height: 4rem;
  margin-top: 10px
  font-weight 700
  margin-bottom 40px


h2
  font-size: 5.0rem
  line-height 1.4
  font-weight 300


h3
  font-size: 3rem;
  line-height: 1.7;
  font-weight 700
  text-transform uppercase
  margin-bottom: 40px

h4
  font-weight 300
  text-transform none
  font-size: 2.4rem;
  line-height: 1.7;

p
  margin-bottom 20px

hr
  margin-top: 50px;
  margin-bottom: -20px;




//--------
// ICONS
//--------


// Icon :before fix
i.icon
  &:before
    vertical-align: middle

.iconLeft
  padding-right 5px

.iconRight
  padding-left 5px

//--------
// BUTTONS
//--------

.btn
  text-transform uppercase
  transition: background-color 0.3s ease;
  font-weight 300
.btn-lg
  font-size: 1.8rem;

.btn-default
  {button_white}

.btn-primary
  {button_main}

.navbar-btn
  margin-left: 15px;

// Brand Logo
.navbar-brand,
.footer-brand
  padding: 0px 20px;
  margin-top: -6px;
  img
    width 150px
    margin 0
